<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/top_headline_mainlay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/topheadline_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            android:foreground="?attr/selectableItemBackground"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/topheadline_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Headline Title"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/topheadline_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="@font/poppins"
        android:maxLines="3"
        android:text="Sed ut perspiciatis unde omnis iste natus error sit  natus error sit voluptatem accusan ium doloremqu Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusan ium doloremque laudan..."
        android:textColor="@color/semi_black_1"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/topheadline_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="20-04-2021"
        android:textColor="@color/dark_grey"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/topheadline_read_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/curve_border"
            android:backgroundTint="@color/main_color"
            android:foreground="?attr/selectableItemBackground"
            android:paddingHorizontal="30dp"
            android:paddingVertical="7dp"
            android:text="Read"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/topheadline_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:background="@drawable/curve_border"
            android:backgroundTint="@color/dark_grey"
            android:foreground="?attr/selectableItemBackground"
            android:paddingHorizontal="30dp"
            android:paddingVertical="7dp"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/curve_border"
        android:backgroundTint="@color/medium_grey" />

</LinearLayout>