<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_news_mainlay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackground"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/search_news_imagecard"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="true">

        <ImageView
            android:id="@+id/search_news_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            android:foreground="?attr/selectableItemBackground"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/search_news_textlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_toEndOf="@+id/search_news_imagecard"
        android:orientation="vertical">

        <TextView
            android:id="@+id/search_news_headline_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_semibold"
            android:maxLines="1"
            android:text="Heaitle Headl dline Title Headline Title  omnis iste natus error sit  natu" />

        <TextView
            android:id="@+id/search_news_headline_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Sed ut perspiciatis unde omnis iste natus error sit  natus error sit voluptatem accusan ium doloremqu Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusan ium doloremque laudan..." />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/search_news_imagecard"
        android:layout_marginTop="5dp"
        android:background="@color/semi_black_1" />

</RelativeLayout>